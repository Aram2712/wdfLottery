<title><%- title %></title>
<link rel="stylesheet" href="/css/createTickets.css">
<link rel="icon" href="/logos/logo.svg">

<style>
    .none {
        display: none;
    }
</style>
<body>
<div class="ticketBodyCreator">

    <div class="steps">
        <div class="circle1"><h3>✓</h3></div>
        <div class="line"></div>
        <div class="circle2"><h3>✓</h3></div>
    </div>
    <div class="bodyForm">
        <form action="/create_tickets_vehicle" method="post"  id="ticketForm">
            <div class="input-group input-group-md md-6 mx-2 my-2">
                <input type="hidden" name="seriesNo" value="<%- seriesNo%>">
                <input type="hidden" name="id" value="<%- id %>">
                <input type="hidden" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm"
                       name="from" min="1001" value="1001" required>

            </div>
            <div class="mx-2 my-2">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">To</span>
                </div>
                <input type="number" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm"
                       name="to" value="1002" min="1" required>
            </div>
            <div class="mx-2 my-2">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Ticket price</span>
                </div>
                <input type="number" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm"
                       name="ticketPrice" min="0" required>

                <button type="submit" class="btn btn-primary px-5 my-3 w-100" id="button">Create</button>

            </div>



        </form>
    </div>

</div>
<div class=" none loading-position" id="loading">
    <img src="/images/loading.gif" width="350px" height="350px" alt="loading">
</div>

<script>
    let btn = document.getElementById('button');
    let form = document.getElementById('ticketForm');
    let loading = document.getElementById('loading');
    btn.addEventListener('click', (e) => {
        if (e) {
            form.classList.add('none')
            loading.classList.remove('none')
        }
    })
</script>
<%- include('../admin/firstPageForAdminLogin.ejs') %>
</body>
